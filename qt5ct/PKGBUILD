# Maintainer: Zatherz <zatherz at linux dot pl>

pkgname=qt5ct
pkgver=0.21
pkgrel=1
pkgdesc="Qt5 Configuration Utility (requires Qt platform theme to be set to qt5ct)"
arch=('x86_64')
license=('BSD')
url="http://qt-apps.org/content/show.php/Qt5+Configuration+Tool?content=168066"
depends=("qt5-base" "qt5-svg")
makedepends=("qt5-tools")
source=("http://sourceforge.net/projects/${pkgname}/files/${pkgname}-${pkgver}.tar.bz2")
install=${pkgname}.install
sha256sums=('7ac1213d01eb4a2ce2a02ed6e135d6b3e404657d6df941bf92a185e166077585')

build() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  qmake-qt5 PREFIX=/usr
  make
}

package() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  make INSTALL_ROOT="${pkgdir}" install
}
