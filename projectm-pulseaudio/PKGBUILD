pkgname=projectm-pulseaudio
pkgver=2.1.0
pkgrel=2
pkgdesc="ProjectM support for Pulseaudio"
depends=('projectm' 'projectm-qt' 'pulseaudio')
arch=('x86_64')
url='http://projectm.sourceforge.net/'
group='projectm'
license=('LGPL')
makedepends=('cmake')
source=("http://downloads.sourceforge.net/projectm/projectM-pulseaudio-${pkgver}-Source.tar.gz")
md5sums=('12c63777763def29ff06e8f327e48a73')

_projectmdir="projectM-pulseaudio-${pkgver}-Source"

build() {
  cd "${srcdir}/projectM-pulseaudio-${pkgver}-Source"

  cmake -DCMAKE_INSTALL_PREFIX=/usr -DCMAKE_BUILD_TYPE=Release . \
	-DINCLUDE-PROJECTM-TEST=OFF -DINCLUDE-PROJECTM-QT=OFF
  make
}

package() {
  pkgdesc="ProjectM support for Pulseaudio"
  depends=('projectm' 'projectm-qt' 'pulseaudio')
  
  cd "${srcdir}/projectM-pulseaudio-${pkgver}-Source"
  make DESTDIR="${pkgdir}" install
}
