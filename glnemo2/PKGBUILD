pkgname=glnemo2
pkgver=1.8.1
pkgrel=1
pkgdesc="an interactive visualization 3D program for nbody snapshots."
arch=('x86_64')
url="http://projets.oamp.fr/projects/glnemo2"
license=('GPL')
depends=('glu' 'qt5-base')
makedepens=('cmake' 'qt5-tools')
source=(http://projets.lam.fr/attachments/download/1631/glnemo2_${pkgver}.tar.gz)
md5sums=('9998fe1d9d51fa30cc746613c144598c')
noextract=( ${source[@]##*/} )

build() {
        cd $srcdir

        #work around strange bsdtar errors
        tar xfs ../$pkgname\_$pkgver.tar.gz
        
        cd $srcdir/$pkgname
        mkdir -p build
        cd build
        cmake ..
        
        make
}

package() {
        cd $srcdir/$pkgname/build
        make DESTDIR=$pkgdir install
}
