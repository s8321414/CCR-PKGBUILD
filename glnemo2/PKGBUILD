#Contributor: Jonathan Fine <were.Vire@gmail.com>
pkgname=glnemo2
pkgver=1.9.0
pkgrel=1
pkgdesc="an interactive visualization 3D program for nbody snapshots."
arch=('x86_64')
url="http://projets.oamp.fr/projects/glnemo2"
license=('GPL')
depends=('glu' 'ccfits' 'qt5-base')
makedepens=('cmake' 'qt5-tools')
source=(http://projets.lam.fr/attachments/download/2308/glnemo2-${pkgver}.tar.gz)
md5sums=('28d58e7932ee2998fd0951c1d6d72bf9')
noextract=( ${source[@]##*/} )

build() {
        cd $srcdir

        #work around strange bsdtar errors
        tar xfs ../$pkgname\-$pkgver.tar.gz
        
        cd $srcdir/$pkgname
        mkdir -p build && cd build
        cmake ..
        
        make
}

package() {
        cd $srcdir/$pkgname/build
        make DESTDIR=$pkgdir install
}
