pkgname=ttf-fira-mono
pkgver=3.206
_pkgver=3206
pkgrel=1
depends=('fontconfig' 'xorg-font-utils')
pkgdesc="A monospace typeface designed for the Firefox OS.(TrueType version)"
arch=('any')
url="https://www.mozilla.org/en-US/styleguide/products/firefox-os/typeface/"
license=('custom:OFL')
source=("http://www.carrois.com/downloads/fira_mono_3_2/FiraMonoFonts${_pkgver}.zip")
install=${pkgname}.install
md5sums=('5b5ff6f7dd31e8f9163b0610dbfe96e8')

package() {
  cd ${srcdir}/FiraMonoFonts${_pkgver}/WEB/TTF
  install -dm755 "${pkgdir}/usr/share/fonts/TTF"
  install -m0644 *.ttf "${pkgdir}/usr/share/fonts/TTF/"
}
