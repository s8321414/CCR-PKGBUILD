# Maintainer: Jeff Huang <s8321414[at]gmail[dot]com>

pkgname=ponymix
pkgver=4
pkgrel=1
pkgdesc="CLI PulseAudio Volume Control"
arch=('x86_64')
url="http://github.com/falconindy/ponymix"
license=('MIT')
depends=('pulseaudio' 'libnotify')
conflicts=('ponymix-git')
source=("http://code.falconindy.com/archive/ponymix/$pkgname-$pkgver.tar.xz")
md5sums=('32a94c57930ddb0e08056438cc4742fe')

build() {
  make -C "$srcdir/$pkgname-$pkgver"
}

package() {
  make -C "$srcdir/$pkgname-$pkgver" DESTDIR="$pkgdir" install
}
