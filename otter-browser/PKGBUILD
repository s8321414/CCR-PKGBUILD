# Maintainer: boenki <boenki at gmx dot de>

pkgname=otter-browser
pkgver=0.9.07
pkgrel=1
pkgdesc="Browser aiming to recreate classic Opera (12.x) UI using Qt5."
arch=('x86_64')
url="http://otter-browser.org/"
license=('GPL3')
depends=('qt5-multimedia' 'qt5-webkit' 'qt5-script' 'hicolor-icon-theme' 'desktop-file-utils' 
         'gstreamer0.10-base-plugins' 'gstreamer0.10-good-plugins')
makedepends=('cmake' 'qt5-tools')
source=(${pkgname}-${pkgver}.tar.gz::https://github.com/Emdek/otter/archive/v$pkgver.tar.gz)
install=${pkgname}.install
md5sums=('82198cedb0d817932d556b80c2676040')

build() {
  cd $pkgname-$pkgver
  lrelease-qt5 resources/translations/*.ts
  cmake -DCMAKE_INSTALL_PREFIX="/usr"
  make
}

package() {
  cd $pkgname-$pkgver
  make DESTDIR=$pkgdir install
}
