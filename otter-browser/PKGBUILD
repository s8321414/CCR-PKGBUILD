# Maintainer: boenki <boenki at gmx dot de>

pkgname=otter-browser
pkgver=0.9.04
pkgrel=1
pkgdesc="Browser aiming to recreate classic Opera (12.x) UI using Qt5."
arch=('i686' 'x86_64')
url="http://otter-browser.org/"
license=('GPL3')
depends=('qt5-webkit' 'qt5-script' 'hicolor-icon-theme' 'desktop-file-utils')
makedepends=('cmake' 'qt5-tools')
source=(${pkgname}-${pkgver}.tar.gz::https://github.com/Emdek/otter/archive/v$pkgver.tar.gz)
md5sums=('41c1113c20568a96dc9621f68c40334b')

build() {
  cd otter-$pkgver
  lrelease resources/translations/*.ts
  cmake -DCMAKE_INSTALL_PREFIX="/usr"
  make
}

package() {
  cd otter-$pkgver
  make DESTDIR=$pkgdir install
}