pkgname=otf-fira-sans
_pkgname=FiraSans
pkgver=3.111
_pkgver=3111
pkgrel=1
depends=('fontconfig' 'xorg-font-utils')
pkgdesc="A sans-serif typeface designed for Firefox OS."
arch=('any')
url="https://www.mozilla.org/en-US/styleguide/products/firefox-os/typeface/"
license=('custom:OFL')
source=("http://www.carrois.com/wordpress/downloads/fira_3_1/FiraFonts3111.zip")
install=${pkgname}.install
md5sums=('41426af1f0a71ff2b2fcca7141e97731')

package() {
  cd ${srcdir}/FiraFonts${_pkgver}/${_pkgname}${_pkgver}/OTF
  install -dm755 "${pkgdir}/usr/share/fonts/OTF"
  install -m0644 *.otf "${pkgdir}/usr/share/fonts/OTF/"
}