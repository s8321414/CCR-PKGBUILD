# Contributor: Markus00000 <xously at gmail dot com>
pkgname=otf-fira-sans
pkgver=4.202
pkgrel=1
depends=('fontconfig' 'xorg-font-utils')
pkgdesc="A sans-serif typeface designed for Firefox OS."
arch=('any')
url="https://www.mozilla.org/en-US/styleguide/products/firefox-os/typeface/"
license=('custom:OFL')
source=("https://github.com/mozilla/Fira/archive/${pkgver}.zip")
install=${pkgname}.install
md5sums=('15c55f4ab550934a06d16fa66357de5f')

package() {
  cd ${srcdir}/Fira-${pkgver}/ttf
  install -dm755 "${pkgdir}/usr/share/fonts/OTF"
  install -m0644 FiraSans*.otf "${pkgdir}/usr/share/fonts/OTF/"
}
