pkgname=qterminal
pkgver=0.7.1
pkgrel=1
pkgdesc="Lightweight Qt-based terminal emulator"
arch=("x86_64")
url="https://github.com/qterminal/qtermwidget"
license=("GPL2")
depends=("hicolor-icon-theme" "qt5-x11extras" "qtermwidget")
makedepends=("cmake" "qt5-tools" "lxqt-build-tools")
conflicts=("qterminal-git")
source=(https://github.com/lxde/$pkgname/releases/download/$pkgver/$pkgname-$pkgver.tar.xz)
sha256sums=('8d49b29febccc158dd115a099115e4ed1c487d4308ec92818e1abeb8821c848f')

build() {
	mkdir -p build
	cd build
	cmake "$srcdir/$pkgname-$pkgver" \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib \
		-DCMAKE_BUILD_TYPE=Release
	make
}

package() {
	cd build
	make DESTDIR="$pkgdir" install
}
