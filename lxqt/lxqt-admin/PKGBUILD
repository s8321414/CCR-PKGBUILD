pkgname=lxqt-admin
pkgver=0.11.1
pkgrel=1
pkgdesc="LXQt system administration"
arch=("x86_64")
url="http://lxqt.org"
license=("LGPL2.1")
depends=("liblxqt" "polkit")
makedepends=("cmake" "qt5-tools" "lxqt-build-tools")
source=(https://github.com/lxde/$pkgname/releases/download/$pkgver/$pkgname-$pkgver.tar.xz)
sha256sums=('b4b26df2901abf84742ff1daf17dbca6e145cf55552efbf424e6c77012b946cb')

build() {
	cd "${srcdir}/${pkgname}-${pkgver}"
	mkdir -p build && cd build
	cmake -DCMAKE_INSTALL_PREFIX=/usr -DCMAKE_INSTALL_LIBDIR:PATH=/usr/lib -DLIB_INSTALL_DIR:PATH=/usr/lib ..
	make
}

package() {
	cd "${srcdir}/${pkgname}-${pkgver}/build"
	make DESTDIR="${pkgdir}" install
}
