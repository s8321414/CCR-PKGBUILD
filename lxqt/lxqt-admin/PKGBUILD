pkgname=lxqt-admin
pkgver=0.10.0
pkgrel=1
pkgdesc="LXQt system administration"
arch=("x86_64")
url="http://lxqt.org"
license=("LGPL2.1")
depends=("liblxqt" "liboobs" "kwindowsystem" "qt5-base")
makedepends=("cmake" "qt5-tools")
source=(http://downloads.lxqt.org/lxqt/${pkgver}/${pkgname}-${pkgver}.tar.xz)
sha256sums=('46a5dd35e4bb560643647dfc9439f4a6ba1cdb3fd73af639cb3aca364cd3a895')

build() {
	cd "${srcdir}/${pkgname}-${pkgver}"
	mkdir -p build && cd build
	cmake -DCMAKE_INSTALL_PREFIX=/usr -DCMAKE_INSTALL_LIBDIR:PATH=/usr/lib -DLIB_INSTALL_DIR:PATH=/usr/lib ..
	make
}

package() {
	cd "${srcdir}/${pkgname}-${pkgver}/build"
	make DESTDIR="${pkgdir}" install
}
