pkgname=lxqt-admin
pkgver=0.9.0
pkgrel=1
pkgdesc="LXQt system administration"
arch=("x86_64")
url="http://lxqt.org"
license=("GPL2")
depends=("liblxqt" "liboobs")
makedepends=("cmake")
source=(http://downloads.lxqt.org/lxqt/${pkgver}/${pkgname}-${pkgver}.tar.xz)
sha256sums=('3845fb710e4615b0c1e377cb4662ab212fe897f4cb50178330d218348dad4345')

build() {
	cd "${srcdir}/${pkgname}-${pkgver}"
	mkdir -p build
	cd build
	cmake -DCMAKE_INSTALL_PREFIX=/usr -DCMAKE_INSTALL_LIBDIR:PATH=/usr/lib -DLIB_INSTALL_DIR:PATH=/usr/lib ..
	make
}

package() {
	cd "${srcdir}/${pkgname}-${pkgver}"
	cd build
	make DESTDIR="${pkgdir}" install
}
