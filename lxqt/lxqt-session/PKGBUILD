# Maintainer: Jerome Leclanche <jerome@leclan.ch>

pkgname=lxqt-session
pkgver=0.8.0
pkgrel=1
pkgdesc="LXQt session"
arch=("x86_64")
url="http://lxqt.org"
license=("GPL2")
depends=("liblxqt")
makedepends=("cmake")
source=($url/downloads/lxqt/${pkgver}/${pkgname}-${pkgver}.tar.xz)
sha256sums=('bab662d167d6b718bfd30122f0c26d786469ed52ec5ae4e6393d6fb9882ff767')

build() {
	cd "${srcdir}/${pkgname}-${pkgver}"
	mkdir -p build
	cd build
	cmake -DCMAKE_INSTALL_PREFIX=/usr -DCMAKE_INSTALL_LIBDIR:PATH=/usr/lib -DLIB_INSTALL_DIR:PATH=/usr/lib -DUSE_QT5=true ..
	make
}

package() {
	cd "${srcdir}/${pkgname}-${pkgver}"
	cd build
	make DESTDIR="${pkgdir}" install
}
