pkgname=pavucontrol-qt
pkgver=0.2.0
pkgrel=1
pkgdesc="A Pulseaudio mixer in Qt (port of pavucontrol)"
arch=("x86_64")
url="http://lxqt.org"
license=("GPL2")
depends=("pulseaudio" "qt5-base")
makedepends=("cmake" "qt5-tools" "lxqt-build-tools")
source=(https://github.com/lxde/$pkgname/releases/download/$pkgver/$pkgname-$pkgver.tar.xz)
sha256sums=('d60d2dfb0740f4f70030a8f57fc06ef0380989f8a57da223d0a9e28557da02cd')

build() {
	mkdir -p build && cd build

	cmake "$srcdir/$pkgname-$pkgver" \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	make
}

package() {
	cd build
	make DESTDIR="$pkgdir" install
}
