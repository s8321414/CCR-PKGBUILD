# Maintainer: Jerome Leclanche <jerome@leclan.ch>

pkgname=lxqt-powermanagement
pkgver=0.9.0
pkgrel=1
pkgdesc="LXQt power management daemon"
arch=("x86_64")
url="http://lxqt.org"
license=("GPL2")
depends=("liblxqt" "libxcb" "qt5-svg" "upower")
makedepends=("cmake")
source=(http://downloads.lxqt.org/lxqt/${pkgver}/${pkgname}-${pkgver}.tar.xz)
sha256sums=('4602de9a9976307a74568cc729c6970c73dc06be5f972ade21eea6afb0c3006b')

build() {
	cd "${srcdir}/${pkgname}-${pkgver}"
	mkdir -p build
	cd build
	cmake -DCMAKE_INSTALL_PREFIX=/usr -DCMAKE_INSTALL_LIBDIR:PATH=/usr/lib -DLIB_INSTALL_DIR:PATH=/usr/lib -DUSE_QT5=true ..
	make
}

package() {
	cd "${srcdir}/${pkgname}-${pkgver}"
	cd build
	make DESTDIR="${pkgdir}" install
}
