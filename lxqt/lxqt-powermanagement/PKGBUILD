# Maintainer: Jerome Leclanche <jerome@leclan.ch>

pkgname=lxqt-powermanagement
pkgver=0.8.0
pkgrel=1
pkgdesc="LXQt power management daemon"
arch=("x86_64")
url="http://lxqt.org"
license=("GPL2")
depends=("liblxqt" "libxcb" "qt5-svg" "upower")
makedepends=("cmake")
source=($url/downloads/lxqt/${pkgver}/${pkgname}-${pkgver}.tar.xz)
sha256sums=('eb2605326c0598331e0c84624e319ef574c6dffc73d0bbc21782cb61a468d40c')

build() {
	cd "${srcdir}/${pkgname}-${pkgver}"
	mkdir -p build
	cd build
	cmake -DCMAKE_INSTALL_PREFIX=/usr -DCMAKE_INSTALL_LIBDIR:PATH=/usr/lib -DLIB_INSTALL_DIR:PATH=/usr/lib -DUSE_QT5=true ..
	make
}

package() {
	cd "${srcdir}/${pkgname}-${pkgver}"
	cd build
	make DESTDIR="${pkgdir}" install
}
