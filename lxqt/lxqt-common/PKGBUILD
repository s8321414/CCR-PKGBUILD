pkgname=lxqt-common
pkgver=0.9.1
pkgrel=1
pkgdesc="Common data to run a LXQt session."
arch=("x86_64")
url="http://lxqt.org"
license=("GPL2")
depends=("liblxqt")
makedepends=("cmake" "qt5-tools")
source=(http://downloads.lxqt.org/lxqt/${pkgver}/${pkgname}-${pkgver}.tar.xz)
sha256sums=('6e572cb10a1619dcfd51bdd33802a71d4556a55ece0bc781c1cb41d972e5734d')

build() {
	cd "${srcdir}/${pkgname}-${pkgver}"
	mkdir -p build
	cd build
	cmake -DCMAKE_INSTALL_PREFIX=/usr -DCMAKE_INSTALL_LIBDIR:PATH=/usr/lib -DLIB_INSTALL_DIR:PATH=/usr/lib ..
	make
}

package() {
	cd "${srcdir}/${pkgname}-${pkgver}"
	cd build
	make DESTDIR="${pkgdir}" install
}
