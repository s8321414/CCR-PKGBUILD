# Maintainer: Jerome Leclanche <jerome@leclan.ch>

pkgname=lxqt-common
pkgver=0.9.0
pkgrel=1
pkgdesc="Common data to run a LXQt session."
arch=("x86_64")
url="http://lxqt.org"
license=("GPL2")
depends=("liblxqt")
makedepends=("cmake" "qt5-tools")
source=(http://downloads.lxqt.org/lxqt/${pkgver}/${pkgname}-${pkgver}.tar.xz)
sha256sums=('495e0015443c6e8564902059413d88e0c8cb632e2b7c0b2e519eb3cd77180b99')

build() {
	cd "${srcdir}/${pkgname}-${pkgver}"
	mkdir -p build
	cd build
	cmake -DCMAKE_INSTALL_PREFIX=/usr -DCMAKE_INSTALL_LIBDIR:PATH=/usr/lib -DLIB_INSTALL_DIR:PATH=/usr/lib ..
	make
}

package() {
	cd "${srcdir}/${pkgname}-${pkgver}"
	cd build
	make DESTDIR="${pkgdir}" install
}
