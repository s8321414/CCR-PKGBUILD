pkgname=libqtxdg
pkgver=1.0.0
pkgrel=1
pkgdesc="Library providing freedesktop.org specs implementations for Qt."
arch=("x86_64")
url="http://lxqt.org"
license=("GPL2")
depends=("qt5-base" "qt5-tools")
makedepends=("cmake")
source=($url/downloads/$pkgname/$pkgver/$pkgname.tar.xz)
sha256sums=('4d75218579bc7c41de7197d3e86f8ccc16a16ba7a18ceefbddf42d0f9a84e2e1')

build() {
	cd "${srcdir}/${pkgname}"
	mkdir -p build
	cd build
	cmake -DCMAKE_INSTALL_PREFIX=/usr -DCMAKE_INSTALL_LIBDIR:PATH=/usr/lib -DLIB_INSTALL_DIR:PATH=/usr/lib -DUSE_QT5=true ..
	make
}

package() {
	cd "${srcdir}/${pkgname}"
	cd build
	make DESTDIR="${pkgdir}" install
}
