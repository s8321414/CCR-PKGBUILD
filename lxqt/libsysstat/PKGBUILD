pkgname=libsysstat
pkgver=0.2.0
pkgrel=1
pkgdesc="Library to query system statistics (net, resource usage, ...)"
arch=("x86_64")
url="http://lxqt.org"
license=("GPL2")
depends=("qt5-base" "qt5-tools")
makedepends=("cmake")
source=($url/downloads/${pkgname}/${pkgver}/${pkgname}-${pkgver}.tar.xz)
sha256sums=('f517c89f8e2abdc90f3f602db6cba89d8405a3d86782f77f663d784d0ecc70ad')

build() {
	cd "${srcdir}/${pkgname}"
	mkdir -p build
	cd build
	cmake -DCMAKE_INSTALL_PREFIX=/usr -DLIB_INSTALL_DIR:PATH=/usr/lib -DUSE_QT5=true ..
	make
}

package() {
	cd "${srcdir}/${pkgname}"
	cd build
	make DESTDIR="${pkgdir}" install
}
