pkgname=libsysstat
pkgver=0.3.3
pkgrel=1
pkgdesc="Library to query system statistics (net, resource usage, ...)"
arch=("x86_64")
url="http://lxqt.org"
license=("LGPL2.1")
depends=("qt5-base")
makedepends=("cmake" "qt5-tools" "lxqt-build-tools")
source=(https://github.com/lxde/libsysstat/releases/download/$pkgver/$pkgname-$pkgver.tar.xz)
sha256sums=('e58640e169e12b6fa35af86cadc3a807f29de29951c7463832a82d22eed14f06')

build() {
	cd "${srcdir}/${pkgname}-${pkgver}"
	mkdir -p build && cd build
	cmake -DCMAKE_INSTALL_PREFIX=/usr \
	      -DCMAKE_INSTALL_LIBDIR=/usr/lib ..
	make
}

package() {
	cd "${srcdir}/${pkgname}-${pkgver}/build"
	make DESTDIR="${pkgdir}" install
}
