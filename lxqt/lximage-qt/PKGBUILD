pkgname=lximage-qt
pkgver=0.5.1
pkgrel=1
pkgdesc="The LXQt image viewer"
arch=('x86_64')
url="http://lxqt.org"
license=('GPL')
conflicts=('lximage-qt-git')
replace=('lximage-qt-git')
depends=('libfm-qt' 'qt5-x11extras' 'qt5-svg')
makedepends=('cmake' 'qt5-tools' 'lxqt-build-tools')
source=(https://github.com/lxde/$pkgname/releases/download/$pkgver/$pkgname-$pkgver.tar.xz)
install=${pkgname}.install
md5sums=('90b79b017649a06b0eb6178590143856')

build() {
	cd "${srcdir}/${pkgname}-${pkgver}"
	mkdir -p build && cd build
	cmake -DCMAKE_INSTALL_PREFIX=/usr -DCMAKE_INSTALL_LIBDIR:PATH=/usr/lib -DLIB_INSTALL_DIR:PATH=/usr/lib ..
	make
}

package() {
	cd "${srcdir}/${pkgname}-${pkgver}"
	cd build
	make DESTDIR="${pkgdir}" install
}
