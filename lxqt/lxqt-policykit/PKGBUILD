pkgname=lxqt-policykit
pkgver=0.9.0
pkgrel=1
pkgdesc="The LXQt policykit authentication agent"
arch=("x86_64")
url="http://lxqt.org"
license=("GPL2")
depends=("liblxqt" "polkit-qt5")
makedepends=("cmake")
source=(http://downloads.lxqt.org/lxqt/${pkgver}/${pkgname}-${pkgver}.tar.xz)
sha256sums=('6bed4b6859085f4330405f25b47beee9d183a37ae7c2ca6876c15b2a1c2cf549')

build() {
	cd "${srcdir}/${pkgname}-${pkgver}"
	mkdir -p build
	cd build
	cmake -DCMAKE_INSTALL_PREFIX=/usr -DCMAKE_INSTALL_LIBDIR:PATH=/usr/lib -DLIB_INSTALL_DIR:PATH=/usr/lib -DUSE_QT5=true ..
	make
}

package() {
	cd "${srcdir}/${pkgname}-${pkgver}"
	cd build
	make DESTDIR="${pkgdir}" install
}
