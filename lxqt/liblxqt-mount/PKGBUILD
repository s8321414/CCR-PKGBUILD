# Maintainer: Jerome Leclanche <jerome@leclan.ch>

pkgname=liblxqt-mount
pkgver=0.8.0
pkgrel=1
pkgdesc="LXQt library used to manage removable devices."
arch=("x86_64")
url="http://lxqt.org"
license=("GPL2")
depends=("liblxqt" "udisks2")
makedepends=("cmake" "qt5-tools")
source=($url/downloads/lxqt/${pkgver}/${pkgname}-${pkgver}.tar.xz)
sha256sums=('f723432fc4b97e6b4c709d65f6a73586fabe835663aad090feda9b02439bad21')

build() {
	cd "${srcdir}/${pkgname}-${pkgver}"
	mkdir -p build
	cd build
	cmake -DCMAKE_INSTALL_PREFIX=/usr -DCMAKE_INSTALL_LIBDIR:PATH=/usr/lib -DLIB_INSTALL_DIR:PATH=/usr/lib -DUSE_QT5=true ..
	make
}

package() {
	cd "${srcdir}/${pkgname}-${pkgver}"
	cd build
	make DESTDIR="${pkgdir}" install
}
