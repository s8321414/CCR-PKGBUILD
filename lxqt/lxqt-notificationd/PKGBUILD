# Maintainer: Jerome Leclanche <jerome@leclan.ch>

pkgname=lxqt-notificationd
pkgver=0.9.0
pkgrel=1
pkgdesc="LXQt notification daemon and library."
arch=("x86_64")
url="http://lxqt.org"
license=("GPL2")
depends=("lxqt-common" "liblxqt" "kwindowsystem")
makedepends=("cmake")
source=(http://downloads.lxqt.org/lxqt/${pkgver}/${pkgname}-${pkgver}.tar.xz)
sha256sums=('f33f8086319ed9d4cffddaed76925db5d79716e90d1112e5b124c95594a74b24')

build() {
	cd "${srcdir}/${pkgname}-${pkgver}"
	mkdir -p build
	cd build
	cmake -DCMAKE_INSTALL_PREFIX=/usr -DCMAKE_INSTALL_LIBDIR:PATH=/usr/lib -DLIB_INSTALL_DIR:PATH=/usr/lib ..
	make
}

package() {
	cd "${srcdir}/${pkgname}-${pkgver}"
	cd build
	make DESTDIR="${pkgdir}" install
}
