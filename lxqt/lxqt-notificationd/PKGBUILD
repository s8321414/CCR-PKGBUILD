pkgname=lxqt-notificationd
pkgver=0.11.1
pkgrel=1
pkgdesc="LXQt notification daemon and library."
arch=("x86_64")
url="http://lxqt.org"
license=("LGPL2.1")
depends=("lxqt-common" "liblxqt")
makedepends=("cmake" "qt5-tools" "lxqt-build-tools")
source=(https://github.com/lxde/$pkgname/releases/download/$pkgver/$pkgname-$pkgver.tar.xz)
sha256sums=('6fc78558c030703bfd84682f4687fa3aec0a9b569991f2767b542de2f8eb4e75')

build() {
	cd "${srcdir}/${pkgname}-${pkgver}"
	mkdir -p build && cd build
	cmake -DCMAKE_INSTALL_PREFIX=/usr ..
	make
}

package() {
	cd "${srcdir}/${pkgname}-${pkgver}/build"
	make DESTDIR="${pkgdir}" install
}
