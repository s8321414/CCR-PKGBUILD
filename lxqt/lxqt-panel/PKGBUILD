# Arch Linux maintainers and contributors:
# Maintainer: Jerome Leclanche <jerome@leclan.ch>

pkgname=lxqt-panel
pkgver=0.9.0
pkgrel=1
pkgdesc="The LXQt desktop panel"
arch=("x86_64")
url="http://lxqt.org"
license=("GPL2")
depends=(
	"icu" "liblxqt-mount" "libsysstat" "kwindowsystem" "kguiaddons"
	"lxqt-globalkeys" "menu-cache" "libxcomposite" "lxmenu-data"
	"alsa-lib" "libpulse" "lm_sensors" "libstatgrab"
)
makedepends=("cmake")
source=(http://downloads.lxqt.org/lxqt/${pkgver}/${pkgname}-${pkgver}.tar.xz)
sha256sums=('96b2c2f1b7de7605ac79f094936e6fcf8f0034342e11d84624a033f2450f6bf1')

build() {
	cd "${srcdir}/${pkgname}-${pkgver}"
	mkdir -p build
	cd build
	cmake -DCMAKE_INSTALL_PREFIX=/usr -DCMAKE_INSTALL_LIBDIR:PATH=/usr/lib -DLIB_INSTALL_DIR:PATH=/usr/lib ..
	make
}

package() {
	cd "${srcdir}/${pkgname}-${pkgver}"
	cd build
	make DESTDIR="${pkgdir}" install
}
