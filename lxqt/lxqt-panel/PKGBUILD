# Arch Linux maintainers and contributors:
# Maintainer: Jerome Leclanche <jerome@leclan.ch>

pkgname=lxqt-panel
pkgver=0.8.0
pkgrel=1
pkgdesc="The LXQt desktop panel"
arch=("x86_64")
url="http://lxqt.org"
license=("GPL2")
depends=(
	"icu" "liblxqt-mount" "libsysstat"
	"lxqt-globalkeys" "menu-cache" "libxcomposite" "lxmenu-data"
	"alsa-lib" "libpulse" "lm_sensors" "libstatgrab"
)
makedepends=("cmake")
source=($url/downloads/lxqt/${pkgver}/${pkgname}-${pkgver}.tar.xz)
sha256sums=('5c453372bf6d35f09400788f6dece1403b63e7cf25abe62066fc9e82c5170b78')

build() {
	cd "${srcdir}/${pkgname}-${pkgver}"
	mkdir -p build
	cd build
	cmake -DCMAKE_INSTALL_PREFIX=/usr -DCMAKE_INSTALL_LIBDIR:PATH=/usr/lib -DLIB_INSTALL_DIR:PATH=/usr/lib -DUSE_QT5=true ..
	make
}

package() {
	cd "${srcdir}/${pkgname}-${pkgver}"
	cd build
	make DESTDIR="${pkgdir}" install
}
