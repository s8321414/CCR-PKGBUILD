# Maintainer: Jerome Leclanche <jerome@leclan.ch>

pkgname=lxqt-sudo
pkgver=0.11.1
pkgrel=1
pkgdesc="LXQt privilege program (lxsu)."
arch=("x86_64")
groups=("lxqt")
url="http://lxqt.org"
license=("LGPL2.1")
depends=("liblxqt")
makedepends=("cmake" "qt5-tools" "lxqt-build-tools")
source=("https://github.com/lxde/$pkgname/releases/download/$pkgver/$pkgname-$pkgver.tar.xz")
sha256sums=('a902b32e137f5041c1dc82376742160f4c866d5a8da25c9384431512cf8555da')


build() {
	mkdir -p build && cd build
	cmake "$srcdir/$pkgname-$pkgver" -DCMAKE_INSTALL_PREFIX=/usr 
	make
}

package() {
	cd build
	make DESTDIR="$pkgdir" install
}
