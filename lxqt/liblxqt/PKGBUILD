pkgname=liblxqt
pkgver=0.9.0
pkgrel=1
pkgdesc="Common base library for LXQt components."
arch=("x86_64")
url="http://lxqt.org"
license=("GPL2")
depends=("qt5-base" "qt5-x11extras" "qt5-tools" "libqtxdg" "kwindowsystem")
makedepends=("cmake")
source=(http://downloads.lxqt.org/lxqt/${pkgver}/${pkgname}-${pkgver}.tar.xz)
sha256sums=('b4f0941bcb8839163aed5c332a26d05650a8d75be241cb39c702f9bd15fe4d52')

build() {
	cd "${srcdir}/${pkgname}-${pkgver}"
	mkdir -p build
	cd build
	cmake -DCMAKE_INSTALL_PREFIX=/usr -DCMAKE_INSTALL_LIBDIR:PATH=/usr/lib -DLIB_INSTALL_DIR:PATH=/usr/lib ..
	make
}

package() {
	cd "${srcdir}/${pkgname}-${pkgver}"
	cd build
	make DESTDIR="${pkgdir}" install
}
