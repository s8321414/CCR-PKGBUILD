pkgname=liblxqt
pkgver=0.8.0
pkgrel=1
pkgdesc="Common base library for LXQt components."
arch=("x86_64")
url="http://lxqt.org"
license=("GPL2")
depends=("qt5-base" "qt5-x11extras" "qt5-tools" "libqtxdg")
makedepends=("cmake")
source=($url/downloads/lxqt/${pkgver}/${pkgname}-${pkgver}.tar.xz)
sha256sums=('9914a7e20caa423438cbb00a459b4c941cc88d4915df36670e4ab18fd636e34e')

build() {
	cd "${srcdir}/${pkgname}-${pkgver}"
	mkdir -p build
	cd build
	cmake -DCMAKE_INSTALL_PREFIX=/usr -DCMAKE_INSTALL_LIBDIR:PATH=/usr/lib -DLIB_INSTALL_DIR:PATH=/usr/lib -DUSE_QT5=true ..
	make
}

package() {
	cd "${srcdir}/${pkgname}-${pkgver}"
	cd build
	make DESTDIR="${pkgdir}" install
}
